@{
    ViewData["Title"] = "Restore Password";

    bool isPost = false;
    if (ViewBag.isPost != null)
    {
        isPost = ViewBag.isPost;
    }
}

@if (!isPost)
{
    <div class="mt-3">
        <div class="d-flex justify-content-center">
            <h2>Restore Password</h2>
        </div>
        <div class="mt-3">
            <form asp-controller="User" asp-action="RestorePassword" method="post">
                <div class="row">
                    <div class="col-4">
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        <label class="form-label">Write your username in here:</label>
                        <input name="userName" class="form-control" placeholder="User Name" />
                    </div>
                </div>
                <div class="d-flex justify-content-start mt-2">
                    <button class="btn btn-outline-info" type="submit">Restore Password</button>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <div class="mt-3 d-flex flex-column align-items-center">
        <h1>Your password has been restored</h1>
        <h4>We've sent you an email with your new password</h4>
        <a asp-controller="User" asp-action="Login">Click this link to Log in</a>
    </div>
}