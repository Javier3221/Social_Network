@using Social_Network.Core.Application.ViewModels.User;
@model SaveUserViewModel;
@{
    ViewData["Title"] = "Create Account";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-dark text-light">
                    <h2>Create Account</h2>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="User" asp-action="Register">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Name:</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label">Last Name:</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email:</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ProfileImage" class="form-label">Profile Picture:</label>
                            <input asp-for="ProfileImage" class="form-control" />
                            <span asp-validation-for="ProfileImage" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">Phone:</label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                            <label asp-for="UserName" class="form-label">User Name:</label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password:</label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirm password:</label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-outline-primary">Create Account</button>
                        <a asp-controller="User" asp-action="Login" class="btn btn-success ms-auto">Go back</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
